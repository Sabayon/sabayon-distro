+            return it==favs.end();
+        }
+    }
+
+    if (QTextDrag::canDecode(event)) {
+        QString text;
+        QTextDrag::decode(event,text);
+        QStringList favs = KickerSettings::favorites();
+
+        if (text.endsWith(".desktop")) {
